<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        app:cardBackgroundColor="@color/colorPrimaryAlternate"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="2dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--<Button-->
            <!--android:id="@+id/shop_btn"-->
            <!--android:layout_height="64dp"-->
            <!--android:text="Shops" />-->

            <!--<Button-->
            <!--android:id="@+id/travel_btn"-->
            <!--android:layout_height="64dp"-->
            <!--android:text="Buttons" />-->

            <!--<Button-->
            <!--android:id="@+id/books_btn"-->
            <!--android:layout_height="64dp"-->
            <!--android:text="Books" />-->

            <!--<Button-->
            <!--android:id="@+id/food_btn"-->
            <!--android:layout_height="64dp"-->
            <!--android:text="Food" />-->

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_roller_coaster"
                android:gravity="center_vertical"
                android:drawablePadding="8dp"
                android:text="Rides"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryText"
                android:textSize="16sp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="32dp"
                android:background="@color/colorPrimaryText"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_events"
                android:drawablePadding="8dp"
                android:text="Events"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryText"
                android:textSize="16sp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="32dp"
                android:background="@color/colorPrimaryText"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/attractions_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_attractions"
                android:drawablePadding="8dp"
                android:text="Attractions"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryText"
                android:textSize="16sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>